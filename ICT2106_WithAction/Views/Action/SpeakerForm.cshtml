<!--

Value to edit when HttpPost Function is up else will get error in current form

-->

@{
    var objList = ViewData["getAllDevices_Id_Name"] as List<object>;
    var getAllDevices_Id_Name = objList[0] as List<String>;
    var n = objList.Count;
}

<p>To use past configuration for this selected category of devices, please click <a href='@Url.Action("ActionQuickSelect", "Action", new { category = "Speaker" })'>here</a></p>
<br />
<!--
    The Html Page for Speaker Create Forms
-->
<form method="post" asp-controller="CategoryForm" asp-action="CreateSpeaker">
    <div class="form-group">
        <label for="actionName">Action Name</label>
        <input type="text" class="form-control" id="actionName" name="actionName" placeholder="Enter Action Name">
    </div>

    <div class="form-group">
        <label for="deviceId">Choose a device</label>
        <select class="form-control" id="deviceId" name="deviceId">
            @foreach (String eachDevicePair in getAllDevices_Id_Name)
            {
                var deviceId = eachDevicePair.Split(",")[0];
                var deviceName = eachDevicePair.Split(",")[1];
                <option value=@deviceId>@deviceName</option>
            }

        </select>
    </div>

    @if (n == 2)
    {
        var quickSelectModel = objList[1] as ActionModel;

        @if (quickSelectModel.ACTIONPROPERTYLIST[0] != null)
        {
            <div class="form-group">
                <label for="speakerStatus">Speaker Status</label>
                <select class="form-control" id="speakerStatus" name="speakerStatus">
                    @if (quickSelectModel.ACTIONPROPERTYLIST[0] == "On")
                    {
                        <option value="On" selected>On</option>
                        <option value="Off">Off</option>
                    }
                    else
                    {
                        <option value="On">On</option>
                        <option value="Off" selected>Off</option>
                    }
                </select>
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerStatus">Speaker Status</label>
                <select class="form-control" id="speakerStatus" name="speakerStatus">
                    <option value="On">On</option>
                    <option value="Off">Off</option>
                </select>
            </div>
        }

        @if (quickSelectModel.ACTIONPROPERTYLIST[1] != null)
        {
            <div class="form-group">
                <label for="speakerService">Speaker Music Service</label>
                <select class="form-control" id="speakerService" name="speakerService">
                    @if (quickSelectModel.ACTIONPROPERTYLIST[1] == "Spotify")
                    {
                        <option value="Spotify" selected>Spotify</option>
                        <option value="Apple Music">Apple Music</option>
                        <option value="Youtube Premium">Youtube Premium</option>
                    }
                    else if (quickSelectModel.ACTIONPROPERTYLIST[1] == "Apple Music")
                    {
                        <option value="Spotify">Spotify</option>
                        <option value="Apple Music" selected>Apple Music</option>
                        <option value="Youtube Premium">Youtube Premium</option>
                    }
                    else
                    {
                        <option value="Spotify">Spotify</option>
                        <option value="Apple Music">Apple Music</option>
                        <option value="Youtube Premium" selected>Youtube Premium</option>
                    }
                </select>
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerService">Speaker Music Service</label>
                <select class="form-control" id="speakerService" name="speakerService">
                    <option value="Spotify">Spotify</option>
                    <option value="Apple Music">Apple Music</option>
                    <option value="Youtube Premium">Youtube Premium</option>
                </select>
            </div>
        }

        @if (quickSelectModel.ACTIONPROPERTYLIST[2] != null)
        {
            <div class="form-group">
                <label for="speakerPlaylist">Play This Playlist</label>
                <input type="text" class="form-control" id="speakerPlaylist" name="speakerPlaylist" placeholder="Enter Playlist" value="@quickSelectModel.ACTIONPROPERTYLIST[2]">
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerPlaylist">Play This Playlist</label>
                <input type="text" class="form-control" id="speakerPlaylist" name="speakerPlaylist" placeholder="Enter Playlist">
            </div>
        }

        @if (quickSelectModel.ACTIONPROPERTYLIST[3] != null)
        {
            <div class="form-group">
                <label for="speakerSong">Play This Song</label>
                <input type="text" class="form-control" id="speakerSong" name="speakerSong" placeholder="Enter Song" value="@quickSelectModel.ACTIONPROPERTYLIST[3]">
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerSong">Play This Song</label>
                <input type="text" class="form-control" id="speakerSong" name="speakerSong" placeholder="Enter Song">
            </div>
        }

        @if (quickSelectModel.ACTIONPROPERTYLIST[4] != null)
        {
            <div class="form-group">
                <label for="speakerState">Speaker State</label>
                <select class="form-control" id="speakerState" name="speakerState">
                    @if (quickSelectModel.ACTIONPROPERTYLIST[4] == "Play")
                    {
                        <option value="Play" selected>Play</option>
                        <option value="Play -Repeat">Play -Repeat</option>
                        <option value="Play -Repeat All">Play -Repeat All</option>
                        <option value="Pause">Pause</option>
                        <option value="Mute">Mute</option>
                    }
                    else if (quickSelectModel.ACTIONPROPERTYLIST[4] == "Play -Repeat")
                    {
                        <option value="Play">Play</option>
                        <option value="Play -Repeat" selected>Play -Repeat</option>
                        <option value="Play -Repeat All">Play -Repeat All</option>
                        <option value="Pause">Pause</option>
                        <option value="Mute">Mute</option>
                    }
                    else if (quickSelectModel.ACTIONPROPERTYLIST[4] == "Play -Repeat All")
                    {
                        <option value="Play">Play</option>
                        <option value="Play -Repeat">Play -Repeat</option>
                        <option value="Play -Repeat All" selected>Play -Repeat All</option>
                        <option value="Pause">Pause</option>
                        <option value="Mute">Mute</option>
                    }
                    else if (quickSelectModel.ACTIONPROPERTYLIST[4] == "Pause")
                    {
                        <option value="Play">Play</option>
                        <option value="Play -Repeat">Play -Repeat</option>
                        <option value="Play -Repeat All">Play -Repeat All</option>
                        <option value="Pause" selected>Pause</option>
                        <option value="Mute">Mute</option>
                    }
                    else
                    {
                        <option value="Play">Play</option>
                        <option value="Play -Repeat">Play -Repeat</option>
                        <option value="Play -Repeat All">Play -Repeat All</option>
                        <option value="Pause">Pause</option>
                        <option value="Mute" selected>Mute</option>
                    }
                </select>
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerState">Speaker State</label>
                <select class="form-control" id="speakerState" name="speakerState">
                    <option value="Play">Play</option>
                    <option value="Play -Repeat">Play -Repeat</option>
                    <option value="Play -Repeat All">Play -Repeat All</option>
                    <option value="Pause">Pause</option>
                    <option value="Mute">Mute</option>
                </select>
            </div>
        }

        @if (quickSelectModel.ACTIONPROPERTYLIST[5] != null)
        {
            <div class="form-group">
                <label for="speakerVolume">Speaker Volume</label>
                <input type="number" class="form-control" id="speakerVolume" name="speakerVolume" min="0" max="100" placeholder="Enter Volume From 0 - 100" value="@quickSelectModel.ACTIONPROPERTYLIST[5]">
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="speakerVolume">Speaker Volume</label>
                <input type="number" class="form-control" id="speakerVolume" name="speakerVolume" min="0" max="100" placeholder="Enter Volume From 0 - 100">
            </div>
        }
    }
    else
    {
        <div class="form-group">
            <label for="speakerStatus">Speaker Status</label>
            <select class="form-control" id="speakerStatus" name="speakerStatus">
                <option value="On">On</option>
                <option value="Off">Off</option>
            </select>
        </div>

        <div class="form-group">
            <label for="speakerService">Speaker Music Service</label>
            <select class="form-control" id="speakerService" name="speakerService">
                <option value="Spotify">Spotify</option>
                <option value="Apple Music">Apple Music</option>
                <option value="Youtube Premium">Youtube Premium</option>
            </select>
        </div>

        <div class="form-group">
            <label for="speakerPlaylist">Play This Playlist</label>
            <input type="text" class="form-control" id="speakerPlaylist" name="speakerPlaylist" placeholder="Enter Playlist">
        </div>

        <div class="form-group">
            <label for="speakerSong">Play This Song</label>
            <input type="text" class="form-control" id="speakerSong" name="speakerSong" placeholder="Enter Song">
        </div>

        <div class="form-group">
            <label for="speakerState">Speaker State</label>
            <select class="form-control" id="speakerState" name="speakerState">
                <option value="Play">Play</option>
                <option value="Play -Repeat">Play -Repeat</option>
                <option value="Play -Repeat All">Play -Repeat All</option>
                <option value="Pause">Pause</option>
                <option value="Mute">Mute</option>
            </select>
        </div>

        <div class="form-group">
            <label for="speakerVolume">Speaker Volume</label>
            <input type="number" class="form-control" id="speakerVolume" name="speakerVolume" min="0" max="100" placeholder="Enter Volume From 0 - 100">
        </div>
    }

    <button type="submit" onclick="return confirm('Are you sure you want to submit?');" class="btn btn-primary">Submit</button>
</form>