@using ICT2106.Models.ConditionTableModule
@model ICT2106.Models.ConditionTableModule.Condition
@{
    ViewData["Title"] = "All condition";
    var ConditionData = ViewData["ConditionData"] as Condition;
    var viewDataCondition = ViewData["Condition"] as IList<ICondition>;
}

  <h1>Condition</h1>
    <br/>

           <table class="table table-bordered table-striped mb-0 results-table">
		   <tr>
		    <td>ConditionID</td>
            <td>CondName</td>
			<td>RuleID</td>
            <td>DevID</td>
            <td>DevCondID</td>
            <td>CatID</td>
            <td>Edit</td>
            <td>Delete</td>
		   </tr>

       
		  @for (var i = 0; i < viewDataCondition.Count; i++) 
		  {
              
		         <tr>
				  <td  id="ConditionID" name="ConditionID">@viewDataCondition[i].ConditionID</td>
  
		          <td> @viewDataCondition[i].CName</td>

                  <td>@viewDataCondition[i].RuleID</td>
   
                  <td>@viewDataCondition[i].DevID</td>

                   <td>@viewDataCondition[i].DName</td>
                 
                  <td>@viewDataCondition[i].Devcat</td>
                
                  <form method="post" action="/Condition/EditCondition">
                <input id="ConditionIDEdit" type="hidden" name="editCondition" class="btn btn-default border" value="@viewDataCondition[i].ConditionID"/>
                <td><input type="submit" class="btn btn-primary btn-sm" value="Edit"></td>
              </form>


                <form method="post"  method="get" action="/Condition/DeleteCondition">
                <input id="ConditionIDDel" type="hidden" name="deleteCondition" class="btn btn-default border" value="@viewDataCondition[i].ConditionID"/>
                <td><button  type="submit"  class="btn btn-labeled btn-danger">
                    <span class="btn-label"><i class="fas fa-trash-alt"></i></span></button></td>
              </form>
				  </tr>
      
		  }
		   </table>